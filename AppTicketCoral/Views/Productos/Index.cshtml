@model IEnumerable<AppTicketCoral.Models.Producto>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Productos Registrados</title>

    <style>
        datos {
            border: 1px solid #ccc;
            padding: 10px;
            font-size: 1em;
        }

            datos tr:nth-child(even) {
                background: #ccc;
            }

            datos td {
                padding: 5px;
            }

            datos tr.noSearch {
                background: White;
                font-size: 0.8em;
            }

                datos tr.noSearch td {
                    padding-top: 10px;
                    text-align: right;
                }

        .hide {
            display: none;
        }

        .red {
            color: Red;
        }

        .Buscador {
            border-radius: 10px 10px 10px 10px;
        }
    </style>
</head>
<body>

    <p>
        @Html.ActionLink("Agregar Producto", "Create")
    </p>

    <form>

        Texto a buscar <input id="searchTerm" type="text" onkeyup="doSearch()" class="Buscador" />

    </form>




    <p>
        <table class="table" id="datos">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Costo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Proveedor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CCompra)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Iva)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubPro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empresa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.codigo_cabys)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Costo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proveedor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CCompra)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Iva)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubPro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Empresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.codigo_cabys)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                <tr class='noSearch hide'>

                    <td colspan="10"></td>

                </tr>
                <tr class='noSearch hide'>

                    <td colspan="10"></td>

                </tr>
            }

        </table>
    </p>
</body>
</html>